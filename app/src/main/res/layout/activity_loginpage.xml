<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginpage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/laglag" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adlam_display"
            android:text="Bienvenue dans la famille"
            android:textAlignment="center"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/adlam_display"
            android:text="ThreeBrothers"
            android:textAlignment="center"
            android:textColor="@color/usedred"
            android:textSize="25sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/identifiantred"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/usedred"
                android:fontFamily="@font/adlam_display"
                android:text="email incorrect"
                android:textAlignment="textStart"
                android:layout_marginLeft="15dp"
                android:textSize="12sp"
                android:visibility="gone"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="horizontal"
            android:background="@drawable/backlogin"
            android:padding="5dp"
            android:addStatesFromChildren="true"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/identifiant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Email"
                android:inputType="text"
                android:paddingHorizontal="15dp"
                android:paddingVertical="20dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/greylogin"
                android:textSize="20sp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/mail" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/inpasswordred"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/usedred"
                android:fontFamily="@font/adlam_display"
                android:text="Password Incorrect"
                android:textAlignment="textStart"
                android:layout_marginLeft="15dp"
                android:textSize="12sp"
                android:visibility="gone"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/backlogin"
            android:orientation="horizontal"
            android:addStatesFromChildren="true"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:clickable="true"
                android:hint="Mot de passe"
                android:inputType="textPassword"
                android:paddingHorizontal="15dp"
                android:paddingVertical="20dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/greylogin"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/lock" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adlam_display"
            android:text="mot de passe oublier?"
            android:textAlignment="textEnd"
            android:layout_marginRight="18dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/backredconnectbotton"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dkhol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/usedred"
                android:paddingHorizontal="15dp"
                android:paddingVertical="15dp"
                android:text="Connexion"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/creercompte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/baccreecompte"
            android:orientation="horizontal"
            android:layout_marginBottom="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/usedred"
                android:paddingHorizontal="15dp"
                android:paddingVertical="15dp"
                android:text="CrÃ©er un compte "
                android:textAlignment="center"
                android:textColor="@color/usedred"
                android:textSize="21sp"
                android:textStyle="bold"/>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>