<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:paddingVertical="5dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logoposition"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/mapmarkerblue" />

            <TextView
                android:id="@+id/placa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/adlam_display"
                android:text="Localisation "
                android:textColor="@color/usedred"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/wa9t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textColor="@color/black"
                android:fontFamily="@font/adlam_display"
                android:text="07/08/2025 16:58"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/superette"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/adlam_display"
                    android:text="Supérette Apolo"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/constant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/adlam_display"
                        android:text="Reçu N°:"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/reference"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/adlam_display"
                        android:text="BE4870"
                        android:textAlignment="center"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adlam_display"
                    android:text="Quantité"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/adlam_display"
                    android:text="x17"
                    android:textAlignment="center"
                    android:textColor="@color/usedred"
                    android:textSize="25sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/habat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="72dp"
                                android:layout_height="83dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/nougatt" />
                        </androidx.cardview.widget.CardView>

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/adlam_display"
                            android:text="Nougat Bora"
                            android:textAlignment="center"
                            android:textColor="#fdaa31"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/quantitya"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/adlam_display"
                            android:text="x6"
                            android:textColor="#fdaa31"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="72dp"
                                android:layout_height="83dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/boramarron" />
                        </androidx.cardview.widget.CardView>

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="5dp"
                            android:fontFamily="@font/adlam_display"
                            android:text="Choco Bora\nMarron"
                            android:textAlignment="center"
                            android:textColor="#9d5629"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/quantityc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/adlam_display"
                            android:text="x2"
                            android:textColor="#9d5629"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/boranoir" />
                        </androidx.cardview.widget.CardView>

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="5dp"
                            android:fontFamily="@font/adlam_display"
                            android:text="Choco Bora\nNoir"
                            android:textAlignment="center"
                            android:textColor="#352401"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/quantitye"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/adlam_display"
                            android:text="x2"
                            android:textColor="#352401"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="72dp"
                                android:layout_height="83dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/barcereal" />
                        </androidx.cardview.widget.CardView>

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="5dp"
                            android:fontFamily="@font/adlam_display"
                            android:text="Bar Céréale \nBora"
                            android:textAlignment="center"
                            android:textColor="#dc583e"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/quantityb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/adlam_display"
                            android:text="x4"
                            android:textColor="#dc583e"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="90dp"
                                android:layout_gravity="center_horizontal"
                                app:srcCompat="@drawable/borablanc" />
                        </androidx.cardview.widget.CardView>

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="5dp"
                            android:fontFamily="@font/adlam_display"
                            android:text="Choco Bora\nBlanc"
                            android:textAlignment="center"
                            android:textColor="#a4968e"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/quantityd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/adlam_display"
                            android:text="x2"
                            android:textColor="#a4968e"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            />
                        <ImageView
                            android:id="@+id/lfatouraa"
                            android:layout_width="45dp"
                            android:layout_height="60dp"
                            android:layout_gravity="bottom"
                            />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/tala3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="20dp"
                            app:srcCompat="@drawable/tala31" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>